<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:layout_margin="10dp"
        android:elevation="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/top"
                android:textAlignment="center"
                android:textSize="30sp"
                android:text="Quiz Id :- "
                android:layout_margin="10dp"
                android:textColor="@color/orange"
                android:fontFamily="@font/aladin"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/topic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/aladin"
                android:text="id"
                android:textAlignment="center"
                android:textColor="@color/orange"
                android:textSize="30sp"
                app:layout_constraintBottom_toBottomOf="@id/top"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/top"
                app:layout_constraintTop_toTopOf="@id/top" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/mar"
                android:textAlignment="center"
                android:textSize="30sp"
                android:text="Marks :- "
                android:layout_margin="10dp"
                android:textColor="@color/orange"
                android:fontFamily="@font/aladin"
                android:layout_marginStart="10dp"
                app:layout_constraintTop_toBottomOf="@id/top"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/marks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:fontFamily="@font/aladin"
                android:text="marks"
                android:textAlignment="center"
                android:textColor="@color/orange"
                android:textSize="30sp"
                app:layout_constraintBottom_toBottomOf="@id/mar"
                app:layout_constraintEnd_toEndOf="@+id/topic"
                app:layout_constraintStart_toEndOf="@+id/top"
                app:layout_constraintStart_toStartOf="@+id/topic"
                app:layout_constraintTop_toTopOf="@id/mar" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>